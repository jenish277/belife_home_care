<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Order Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding: 20px;
    }

    .form-header {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .btn-group button {
      margin-right: 5px;
    }
  </style>
</head>

<body>
  <div class="container">
    <h2 class="form-header">Product Order Form</h2>
    <form action="/addTask" method="POST">
      <!-- Personal Information Section -->
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="number" class="col-sm-2 col-form-label">Phone Number</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="number" name="number" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="address" name="address" rows="2" required></textarea>
        </div>
      </div>

      <!-- Product Selection Section -->
      <h4 class="mt-4 mb-3">Product Details</h4>
      <div class="row mb-3">
        <label for="dishWash" class="col-sm-2 col-form-label">Dish Wash</label>
        <div class="col-sm-5">
          <select class="form-select" id="dishWash" name="dishWash">
            <option value="">Select Size</option>
            <option value="1000ML">1000ML</option>
            <option value="5000ML">5000ML</option>
          </select>
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="dishQnt" name="dishQnt" placeholder="Quantity">
        </div>
      </div>

      <div class="row mb-3">
        <label for="laundryWash" class="col-sm-2 col-form-label">Laundry Wash</label>
        <div class="col-sm-5">
          <select class="form-select" id="laundryWash" name="laundryWash">
            <option value="">Select Size</option>
            <option value="1000ML">1000ML</option>
            <option value="5000ML">5000ML</option>
          </select>
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="laundryQnt" name="laundryQnt" placeholder="Quantity">
        </div>
      </div>

      <div class="row mb-3">
        <label for="floorCleaner" class="col-sm-2 col-form-label">Floor Cleaner</label>
        <div class="col-sm-5">
          <select class="form-select" id="floorCleaner" name="floorCleaner">
            <option value="">Select Fragrance</option>
            <option value="Rose">Rose</option>
            <option value="Jasmine">Jasmine</option>
          </select>
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="floorClenerQnt" name="floorClenerQnt" placeholder="Quantity">
        </div>
      </div>

      <div class="row mb-3">
        <label for="handWash" class="col-sm-2 col-form-label">Hand Wash</label>
        <div class="col-sm-5">
          <select class="form-select" id="handWash" name="handWash">
            <option value="">Select Fragrance</option>
            <option value="Black Berry">Black Berry</option>
            <option value="Sandalwood">Sandalwood</option>
          </select>
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="handWashQnt" name="handWashQnt" placeholder="Quantity">
        </div>
      </div>

      <div class="row mb-3">
        <label for="toiletCleaner" class="col-sm-2 col-form-label">Toilet Cleaner</label>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="toiletClenerQnt" name="toiletClenerQnt" placeholder="Quantity">
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
