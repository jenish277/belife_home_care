<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Task</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding: 20px;
    }
    .form-header {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }
    .checkbox-container {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }
    .checkbox-label {
      margin-left: 8px;
      font-size: 1rem;
      color: #333;
    }
    .form-check-input {
      transform: scale(1.2);
      cursor: pointer;
    }
    .row.mb-3 {
      margin-bottom: 1.5rem !important;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="form-header">Edit Task #<%= task.no %></h2>
    <form action="/update/<%= task._id %>" method="POST">
      <!-- Personal Information Section -->
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" value="<%= task.name %>" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="number" class="col-sm-2 col-form-label">Phone Number</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="number" name="number" value="<%= task.number %>" required>
        </div>
      </div>
      <div class="row mb-3">
        <label for="address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="address" name="address" rows="2" required><%= task.address %></textarea>
        </div>
      </div>

      <!-- Product Selection Section -->
      <h4 class="mt-4 mb-3">Product Details</h4>
      <!-- Dish Wash -->
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Dish Wash</label>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="dishWash1000mlQnt" name="dishWash1000mlQnt" placeholder="1000ML Quantity" min="0" value="<%= task.dishWash1000mlQnt %>">
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="dishWash5000mlQnt" name="dishWash5000mlQnt" placeholder="5000ML Quantity" min="0" value="<%= task.dishWash5000mlQnt %>">
        </div>
      </div>

      <!-- Laundry Wash -->
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Laundry Wash</label>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="laundryWash1000mlQnt" name="laundryWash1000mlQnt" placeholder="1000ML Quantity" min="0" value="<%= task.laundryWash1000mlQnt %>">
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="laundryWash5000mlQnt" name="laundryWash5000mlQnt" placeholder="5000ML Quantity" min="0" value="<%= task.laundryWash5000mlQnt %>">
        </div>
      </div>

      <!-- Floor Cleaner -->
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Floor Cleaner</label>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="floorCleanerRoseQnt" name="floorCleanerRoseQnt" placeholder="Rose Quantity" min="0" value="<%= task.floorCleanerRoseQnt %>">
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="floorCleanerJasmineQnt" name="floorCleanerJasmineQnt" placeholder="Jasmine Quantity" min="0" value="<%= task.floorCleanerJasmineQnt %>">
        </div>
        <div class="col-sm-2 checkbox-container">
          <input type="checkbox" class="form-check-input" id="floorCleanerJasmineFree" name="floorCleanerJasmineFree" <%= task.floorCleanerJasmineFree ? 'checked' : '' %>>
          <label for="floorCleanerJasmineFree" class="checkbox-label">Free</label>
        </div>
      </div>

      <!-- Hand Wash -->
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Hand Wash</label>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="handWashBlackBerryQnt" name="handWashBlackBerryQnt" placeholder="Black Berry Quantity" min="0" value="<%= task.handWashBlackBerryQnt %>">
        </div>
        <div class="col-sm-5">
          <input type="number" class="form-control" id="handWashSandalwoodQnt" name="handWashSandalwoodQnt" placeholder="Sandalwood Quantity" min="0" value="<%= task.handWashSandalwoodQnt %>">
        </div>
      </div>

      <!-- Toilet Cleaner -->
      <div class="row mb-3">
        <label for="toiletCleanerQnt" class="col-sm-2 col-form-label">Toilet Cleaner</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="toiletCleanerQnt" name="toiletCleanerQnt" placeholder="Quantity" min="0" value="<%= task.toiletCleanerQnt %>">
        </div>
      </div>

      <!-- Bathroom Shiner -->
      <div class="row mb-3">
        <label for="bathroomShinerQnt" class="col-sm-2 col-form-label">Bathroom Shiner</label>
        <div class="col-sm-8">
          <input type="number" class="form-control" id="bathroomShinerQnt" name="bathroomShinerQnt" placeholder="Quantity" min="0" value="<%= task.bathroomShinerQnt %>">
        </div>
        <div class="col-sm-2 checkbox-container">
          <input type="checkbox" class="form-check-input" id="bathroomShinerFree" name="bathroomShinerFree" <%= task.bathroomShinerFree ? 'checked' : '' %>>
          <label for="bathroomShinerFree" class="checkbox-label">Free</label>
        </div>
      </div>

      <!-- Copper -->
      <div class="row mb-3">
        <label for="copperQnt" class="col-sm-2 col-form-label">Copper</label>
        <div class="col-sm-8">
          <input type="number" class="form-control" id="copperQnt" name="copperQnt" placeholder="Quantity" min="0" value="<%= task.copperQnt %>">
        </div>
        <div class="col-sm-2 checkbox-container">
          <input type="checkbox" class="form-check-input" id="copperFree" name="copperFree" <%= task.copperFree ? 'checked' : '' %>>
          <label for="copperFree" class="checkbox-label">Free</label>
        </div>
      </div>

      <!-- Final -->
      <div class="row mb-3">
        <label for="finalQnt" class="col-sm-2 col-form-label">Final</label>
        <div class="col-sm-8">
          <input type="number" class="form-control" id="finalQnt" name="finalQnt" placeholder="Quantity" min="0" value="<%= task.finalQnt %>">
        </div>
        <div class="col-sm-2 checkbox-container">
          <input type="checkbox" class="form-check-input" id="finalFree" name="finalFree" <%= task.finalFree ? 'checked' : '' %>>
          <label for="finalFree" class="checkbox-label">Free</label>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Update Task</button>
        <a href="/tasks" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
